{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.content.placeholders": [
    {
      "id": "permalink",
      "value": "{{fm.permalink}}"
    }
  ],
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "clearEmpty": true,
      "fields": [
        {
          "title": "Layout",
          "name": "layout",
          "description": "The Jekyll layout file to use",
          "type": "choice",
          "choices": [
            "archive",
            "page",
            "post"
          ],
          "default": "post",
          "required": true
        },
        {
          "title": "Title",
          "name": "title",
          "type": "string",
          "required": true
        },
        {
          "title": "Author",
          "name": "author",
          "type": "string"
        },
        {
          "title": "Excerpt",
          "name": "excerpt",
          "type": "string"
        },
        {
          "title": "Publishing date",
          "name": "date",
          "type": "datetime",
          "dateFormat": "YYYY-MM-DD HH:MM +0800",
          "default": "{{now}}",
          "isPublishDate": true,
          "required": true
        },
        {
          "title": "Last modified date",
          "name": "last_modified_at",
          "type": "datetime",
          "dateFormat": "YYYY-MM-DD HH:MM +0800",
          "isModifiedDate": true
        },
        {
          "title": "Permalink",
          "name": "permalink",
          "type": "string",
          "default": "/{{slug}}/",
          "required": true
        },
        {
          "title": "Redirect from",
          "name": "redirect_from",
          "type": "list"
        },
        {
          "title": "Featured image",
          "name": "image",
          "type": "fields",
          "fields": [
            {
              "title": "Path",
              "name": "path",
              "description": "Absolute or relative path of a JPG, PNG, or SVG file",
              "type": "image",
              "isPreviewImage": true,
              "default": "/assets/images/write-2160925.svg"
            },
            {
              "title": "Width",
              "name": "width",
              "default": "730",
              "type": "number"
            },
            {
              "title": "Height",
              "name": "height",
              "default": "411",
              "type": "number"
            },
            {
              "title": "Class",
              "name": "class",
              "type": "choice",
              "choices": [
                "shadow-none"
              ]
            },
            {
              "title": "Thumbnail alignment",
              "name": "fit",
              "type": "choice",
              "choices": [
                "left",
                "right"
              ]
            },
            {
              "title": "Hide image",
              "name": "hide",
              "type": "boolean",
              "description": "Set to true to not embed the image on this post"
            }
          ]
        },
        {
          "title": "Categories",
          "name": "categories",
          "type": "categories"
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "Additional AMP components",
          "name": "amp",
          "type": "fields",
          "description": "Enable additional AMP components for this post",
          "fields": [
            {
              "title": "Gist",
              "name": "gist",
              "type": "boolean",
              "description": "Enable AMP support for GitHub Gists"
            },
            {
              "title": "iframe",
              "name": "iframe",
              "type": "boolean",
              "description": "Enable AMP support for iframes"
            },
            {
              "title": "Script",
              "name": "script",
              "type": "boolean",
              "description": "Enable AMP support for custom scripts"
            },
            {
              "title": "YouTube",
              "name": "youtube",
              "type": "boolean",
              "description": "Enable AMP support for YouTube embeds"
            }
          ]
        },
        {
          "title": "Custom HTML header",
          "name": "custom_header",
          "type": "string",
          "description": "Add custom HTML to the header of this post"
        },
        {
          "title": "CSS",
          "type": "fields",
          "name": "css",
          "description": "Include additional CSS styles for this post",
          "fields": [
            {
              "title": "Badge",
              "name": "badge",
              "type": "boolean",
              "description": "Enable CSS for badges"
            },
            {
              "title": "Code block",
              "name": "syntax",
              "type": "boolean",
              "description": "Enable CSS for code blocks"
            },
            {
              "title": "Custom CSS",
              "name": "custom",
              "type": "string",
              "description": "Add custom CSS for this post"
            }
          ]
        },
        {
          "title": "Allow comments",
          "name": "comments",
          "type": "boolean",
          "description": "Enable or disable comments for this post"
        },
        {
          "title": "Sidebar",
          "name": "sidebar",
          "type": "choice",
          "choices": [
            "left",
            "right",
            "none"
          ],
          "description": "Position of the sidebar for this post"
        },
        {
          "title": "Featured",
          "name": "featured",
          "type": "boolean",
          "description": "Pin this post as a featured post"
        },
        {
          "title": "Redirect to",
          "name": "redirect_to",
          "type": "string",
          "single": true,
          "description": "URL to redirect this post to"
        },
        {
          "title": "Sitemap",
          "name": "sitemap",
          "type": "boolean",
          "description": "Exclude this post from the sitemap generated by the jekyll-sitemap plugin by setting this flag to false"
        },
        {
          "title": "Consent UI",
          "name": "consent_ui",
          "type": "boolean",
          "description": "Hide the AMP consent UI on a per-page basis by setting this flag to false"
        }
      ]
    }
  ],
  "frontMatter.framework.id": "jekyll",
  "frontMatter.framework.startCommand": "bundle exec jekyll serve --trace --livereload",
  "frontMatter.content.publicFolder": "assets",
  "frontMatter.preview.host": "http://127.0.0.1:4000/amp-affiliately-jekyll-theme/",
  "frontMatter.site.baseURL": "https://chriskyfung.github.io/",
  "frontMatter.website.host": "https://chriskyfung.github.io/amp-affiliately-jekyll-theme/",
  "frontMatter.taxonomy.slugTemplate": "{{seoTitle}}",
  "frontMatter.taxonomy.seoDescriptionField": "excerpt",
  "frontMatter.content.pageFolders": [
    {
      "title": "posts",
      "path": "[[workspace]]/_posts",
      "previewPath": ""
    }
  ],
  "frontMatter.extensibility.scripts": [
    "[[workspace]]/.frontmatter/ui/external.js"
  ]
}
