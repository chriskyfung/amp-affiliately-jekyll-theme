{
  "$schema": "https://frontmatter.codes/config/content.snippets.schema.json",
  "title": "Insert Alert",
  "description": "Use the alert.html template to insert a Bootstrap-style alert.",
  "body": [
    "{% capture alert_content %}",
    "[[&selection]]",
    "{% endcapture %}",
    "",
    "{% include alert.html type=\"[[type]]\" title=\"[[title]]\" content=alert_content %}"
  ],
  "fields": [
    {
      "name": "type",
      "title": "Alert Type",
      "type": "choice",
      "choices": [
        "primary",
        "secondary",
        "success",
        "danger",
        "warning",
        "info",
        "light",
        "dark"
      ],
      "default": "primary"
    },
    {
      "name": "title",
      "title": "Alert Title (optional)",
      "type": "string",
      "default": ""
    },
    {
      "name": "selection",
      "title": "Alert Content",
      "type": "string",
      "default": "FM_SELECTED_TEXT"
    }
  ]
}