{
  "$schema": "https://frontmatter.codes/config/content.snippets.schema.json",
  "title": "Insert Markdown Comment",
  "description": "Use kramdown comment syntax to hide text from the output and preserve it in the source",
  "body": [
    "{::comment}",
    "[[&selection]]",
    "{:/comment}"
  ],
  "fields": [
    {
      "name": "selection",
      "title": "Selected Text",
      "type": "string",
      "default": "FM_SELECTED_TEXT"
    }
  ]
}
