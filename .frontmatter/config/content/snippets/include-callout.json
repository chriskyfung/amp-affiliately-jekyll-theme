{
  "$schema": "https://frontmatter.codes/config/content.snippets.schema.json",
  "title": "Insert Callout",
  "description": "Creates a callout box. Captures selected text for the content.",
  "body": [
    "{% capture [[var]] %}",
    "[[&selection]]",
    "{% endcapture %}",
    "",
    "{% include callout.html content=[[var]] type=\"[[type]]\" title=\"[[title]]\" color=\"[[color]]\" %}"
  ],
  "fields": [
    {
      "name": "var",
      "title": "Variable Name",
      "type": "string",
      "single": true,
      "default": "myCallout"
    },
    {
      "name": "selection",
      "title": "Selected Text (Content)",
      "type": "string",
      "default": "FM_SELECTED_TEXT"
    },
    {
      "name": "type",
      "title": "Callout Type",
      "type": "choice",
      "choices": [
        "",
        "info",
        "success",
        "warning",
        "danger"
      ],
      "default": ""
    },
    {
      "name": "title",
      "title": "Optional Title",
      "type": "string"
    },
    {
      "name": "color",
      "title": "Optional Custom Color (overridden by type)",
      "type": "string"
    }
  ]
}
