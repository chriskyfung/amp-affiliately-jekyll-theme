{
  "$schema": "https://frontmatter.codes/config/content.snippets.schema.json",
  "title": "Insert Bibliography with Jekyll-Scholar",
  "description": "Use the bibliography tag of Jekyll-Scholar plugin to insert a bibliography for the citations in your markdown document",
  "body": [
    "{% bibliography [[options]][[args]] %}"
  ],
  "fields": [
    {
      "name": "options",
      "title": "Option",
      "type":"choice",
      "default": "",
      "choices": [
        "",
        "--cited ",
        "--cited_in_order ",
        "--file ",
        "--query ",
        "--max ",
        "--label chapter --locator ",
        "--label figure --locator ",
        "--prefix "
      ]
    },
    {
      "name": "args",
      "title": "Arguements",
      "type": "string",
      "single": true,
      "default": ""
    }
  ]
}
