{
  "$schema": "https://frontmatter.codes/config/content.snippets.schema.json",
  "title": "Insert Citation with Jekyll-Scholar",
  "description": "Use the cite tag of Jekyll-Scholar plugin to insert the citations to your markdown document",
  "body": [
    "{% cite [[cite-keys]] [[options]][[args]] %}"
  ],
  "fields": [
    {
      "name": "cite-keys",
      "title": "Citation-Keys",
      "type": "string",
      "single": true,
      "default": "FM_SELECTED_TEXT"
    },
    {
      "name": "options",
      "title": "Option",
      "type":"choice",
      "default": "",
      "choices": [
        "",
        "--file ",
        "--suppress_author ",
        "--locator ",
        "--label chapter --locator ",
        "--label figure --locator ",
        "--prefix "
      ]
    },
    {
      "name": "args",
      "title": "Arguements",
      "type": "string",
      "single": true,
      "default": ""
    }
  ]
}
