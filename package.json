{
  "name": "amp-affiliately-jekyll-theme",
  "description": "AMP Affiliately is an AMP-ready Jekyll theme for your blogs and websites.",
  "version": "3.6.2",
  "scripts": {
    "install": "bundle install",
    "start": "npm run serve",
    "serve": "bundle exec jekyll serve --livereload",
    "serve:trace": "bundle exec jekyll serve --trace --livereload",
    "lint": "markdownlint-cli2 ./_posts/**/*.md",
    "build": "npm run css:build && cross-env JEKYLL_ENV=production bundle exec jekyll build && gulp build",
    "build:dev": "npm run css:build && bundle exec jekyll build && gulp build",
    "test": "gulp validate --ignore-files=search.html",
    "test:dev": "gulp validate",
    "deploy:status": "gh workflow view jekyll-build.yml",
    "css:build": "npm-run-all css:compile css:prefix css:minify",
    "css:clean": "rimraf _includes/css/",
    "css:compile": "sass --no-charset _sass/:_includes/css/ --style=expanded --source-map",
    "css:prefix": "postcss \"_includes/css/**/!(*.min).css\" --use autoprefixer --replace --map",
    "css:minify": "postcss \"_includes/css/**/!(*.min).css\" --use cssnano --dir _includes/css/ --base _includes/css/ --ext .min.css --no-map",
    "css:watch": "nodemon --watch _sass --ext scss --exec \"npm run css:build\"",
    "update:browserslist": "npx browserslist@latest --update-db"
  },
  "homepage": "https://github.com/chriskyfung/amp-affiliately-jekyll-theme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chriskyfung/amp-affiliately-jekyll-theme.git"
  },
  "bugs": {
    "url": "https://github.com/chriskyfung/amp-affiliately-jekyll-theme/issues"
  },
  "keywords": [
    "jekyll",
    "theme",
    "jekyll-theme",
    "github-pages",
    "amp",
    "jekyll-themes",
    "accelerated-mobile-pages",
    "blog-theme",
    "responsive-theme",
    "amp-jekyll",
    "jekyll-theme-amp"
  ],
  "author": "Chris K.Y. FUNG (https://chriskyfung.github.io/)",
  "license": "MIT",
  "engines": {
    "node": "^20.19.0 || ^22.12.0 || >=23.0.0",
    "npm": ">=9.1.2"
  },
  "type": "module",
  "devDependencies": {
    "@ampproject/toolbox-optimizer": "^2.10.1",
    "amphtml-validator": "^1.0.38",
    "ansi-colors": "^4.1.3",
    "autoprefixer": "^10.4.22",
    "cross-env": "^10.1.0",
    "cssnano": "^7.1.2",
    "fancy-log": "^2.0.0",
    "gulp": "^5.0.1",
    "gulp-html-minifier-terser": "^7.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "rimraf": "^6.1.2",
    "sass": "^1.95.0",
    "through2": "^4.0.2",
    "yargs": "^18.0.0"
  },
  "overrides": {
    "@ampproject/toolbox-optimizer": {
      "postcss": "^8.4.31",
      "terser": ">=5.14.2"
    }
  },
  "resolutions": {
    "node-sass": "https://registry.npmjs.org/node-sass/-/node-sass-7.0.0.tgz"
  }
}
